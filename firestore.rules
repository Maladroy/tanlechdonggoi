rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Combos: Everyone can read, only Admin can write
    match /combos/{comboId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories: Everyone can read, only Admin can write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings: Everyone can read (needed for client-side logic), only Admin can write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Coupons: Everyone can read, only Admin can write
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Promos: Everyone can read, only Admin can write
    match /promos/{promoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: 
    // - Create: Authenticated users can create own orders, Guests can create with userId="guest"
    // - Read: User can read own orders, Admin can read all
    // - Update: Admin can update status
    match /orders/{orderId} {
      allow create: if true;
      allow read: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin(); 
    }
    
    // Users:
    match /users/{userId} {
      allow read: if isAuth() && (request.auth.uid == userId || isAdmin());
      
      // Create: User can create their own profile, but cannot set isAdmin to true
      allow create: if isAuth() && request.auth.uid == userId && 
        (!request.resource.data.keys().hasAny(['isAdmin']) || request.resource.data.isAdmin == false);

      // Update: User can update own profile (including usedCoupons, ownedCoupons), but cannot change isAdmin
      allow update: if isAuth() && request.auth.uid == userId && 
        (!request.resource.data.keys().hasAny(['isAdmin']) || request.resource.data.isAdmin == resource.data.isAdmin);
        
      // Admin can write anything
      allow write: if isAdmin();
    }

  }
}
